@model CarRental3.Models.Car

@{
    ViewData["Title"] = "Delete Car";
}

<h1>Delete Car</h1>

<h3>Are you sure you want to delete this car?</h3>
<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Brand)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Brand)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Model)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Model)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.YearModel)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.YearModel)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CostPerDay)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CostPerDay)
        </dd>
    </dl>
</div>

<form asp-action="DeleteCarConfirmed" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="CarId" />
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-controller="Admin" asp-action="AdminDashBoard" class="btn btn-secondary">Cancel</a>
    </div>
</form>
