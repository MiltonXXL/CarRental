@model CarRental3.ViewModels.BookCarViewModel

@{
    ViewData["Title"] = "Book Car";
}

<h1>Book Car</h1>

<div class="row">
    <!-- Login Section -->
    <div class="col-md-6">
        <h2>Login</h2>
        <form asp-action="Login" method="post">
            @Html.AntiForgeryToken()

            <!-- UserName -->
            <div class="form-group">
                <label asp-for="LoginViewModel.UserName" class="control-label"></label>
                <input asp-for="LoginViewModel.UserName" class="form-control" />
                <span asp-validation-for="LoginViewModel.UserName" class="text-danger"></span>
            </div>

            <!-- Password -->
            <div class="form-group">
                <label asp-for="LoginViewModel.Password" class="control-label"></label>
                <input asp-for="LoginViewModel.Password" type="password" class="form-control" autocomplete="off" />
                <span asp-validation-for="LoginViewModel.Password" class="text-danger"></span>
            </div>

            <!-- Hidden CarId -->
            <div class="form-group">
                <input type="hidden" asp-for="LoginViewModel.CarId" />
            </div>

            <!-- Submit Button -->
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>

    <!-- Register Section -->
    <div class="col-md-6">
        <h2>Register</h2>
        <form asp-action="Register" method="post">
            @Html.AntiForgeryToken()

            <!-- UserName for Registration -->
            <div class="form-group">
                <label asp-for="RegisterViewModel.RegisterUserName" class="control-label"></label>
                <input asp-for="RegisterViewModel.RegisterUserName" type="text" class="form-control" />
                <span asp-validation-for="RegisterViewModel.RegisterUserName" class="text-danger"></span>
            </div>

            <!-- Password for Registration -->
            <div class="form-group">
                <label asp-for="RegisterViewModel.RegisterPassword" class="control-label"></label>
                <input asp-for="RegisterViewModel.RegisterPassword" type="password" class="form-control" autocomplete="off" />
                <span asp-validation-for="RegisterViewModel.RegisterPassword" class="text-danger"></span>
            </div>

            <!-- Hidden CarId for Registration -->
            <div class="form-group">
                <input type="hidden" asp-for="RegisterViewModel.CarId" />
            </div>

            <!-- Submit Button for Registration -->
            <div class="form-group">
                <input type="submit" value="Register" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
