@model CarRental3.ViewModels.BookingViewModel

@{
    ViewData["Title"] = "Create New Booking";
}

<h1>Create New Booking</h1>

<div class="row">
    <div class="col-md-4">
        <img src="@Model.ImageUrl" alt="Car Image" style="width: 100%; height: auto;" />
    </div>
    <div class="col-md-8">
        <form asp-action="CreateBooking" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="BookingId" />
            <input type="hidden" asp-for="UserRole" value="@Model.UserRole" />

            <div class="form-group">
                <label asp-for="CarId" class="control-label">Car</label>
                <select asp-for="CarId" class="form-control" asp-items="Model.Cars"></select>
                <span asp-validation-for="CarId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="UserId" class="control-label">User</label>
                <select asp-for="UserId" class="form-control" asp-items="Model.Users"></select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="StartDate" class="control-label">Start Date</label>
                <input asp-for="StartDate" class="form-control" type="date" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EndDate" class="control-label">End Date</label>
                <input asp-for="EndDate" class="form-control" type="date" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Car</label>
                <input class="form-control" value="@Model.Car.Brand @Model.Car.Model" disabled />
            </div>

            <button type="submit" class="btn btn-primary">Create Booking</button>
            <a asp-action="BackToDashboard" asp-route-userRole="@Model.UserRole" class="btn btn-secondary">Back To Dashboard</a>
        </form>

       @*  <a asp-controller="User" asp-action="UserDashBoard" class="btn btn-secondary">Back to Dashboard</a> *@
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
