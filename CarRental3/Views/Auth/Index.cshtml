@model CarRental3.ViewModels.LoginOrRegisterViewModel

@{
    ViewData["Title"] = "Login or Register";
}

<h1>Login or Register</h1>

<div class="row">
    <div class="col-md-6">
        <h2>Login</h2>
        <form asp-action="Login" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="CarId" />
            <div class="form-group">
                <label asp-for="Email" class="control-label">User Name</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Password</label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
        </form>
    </div>

    <div class="col-md-6">
        <h2>Register</h2>
        <form asp-action="Register" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="CarId" />
            <div class="form-group">
                <label asp-for="RegisterEmail" class="control-label">User Name</label>
                <input asp-for="RegisterEmail" class="form-control" />
                <span asp-validation-for="RegisterEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisterPassword" class="control-label">Password</label>
                <input asp-for="RegisterPassword" class="form-control" type="password" />
                <span asp-validation-for="RegisterPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    @Html.Partial("_ValidationScriptsPartial")
}
